{
  "plugin": ["stylelint-scss"],
  "extends": ["stylelint-config-recommended-scss", "stylelint-config-recess-order", "stylelint-config-prettier"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["function", "if", "for", "each", "include", "mixin", "content", "return", "else", "use", "extend", "layer"]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["layer"]
      }
    ],
    "font-family-no-missing-generic-family-keyword": [
      true,
      {
        "ignoreFontFamilies": ["Material Icons", "Material Icons Outlined", "FontAwesome"]
      }
    ],
    "no-descending-specificity": null
  }
}
